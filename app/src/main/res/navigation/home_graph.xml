<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph.xml"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mvvmrxjavatemp.ui.home_fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.mvvmrxjavatemp.ui.product_page.ProductFragment"
        android:label="product_fragment"
        tools:layout="@layout/product_fragment" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.mvvmrxjavatemp.ui.cart.CartFragment"
        android:label="CartFragment" />
</navigation>